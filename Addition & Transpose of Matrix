#include<iostream>
using namespace std;
int main()
{
	int A[3][3], B[3][3], C[3][3];

	cout << "Enter matrix A" << endl;
	for (int i = 0; i < 3; i++)
		for (int j = 0; j < 3; j++)
			cin >> A[i][j];

	cout << "Enter matrix B" << endl;
	for (int i = 0; i < 3; i++)
		for (int j = 0; j < 3; j++)
			cin >> B[i][j];

	for (int i = 0; i < 3; i++)
		for (int j = 0; j < 3; j++)
			C[i][j] = A[i][j] + B[i][j];


	cout << "\nMatrix A" << endl;
	for (int i = 0; i < 3; i++)
	{
		for (int j = 0; j < 3; j++)
			cout << A[i][j] << " ";
		cout << endl;
	}

	cout << "\nMatrix B" << endl;
	for (int i = 0; i < 3; i++)
	{
		for (int j = 0; j < 3; j++)
			cout << B[i][j] << " ";
		cout << endl;
	}

	cout << "\nMatrix A + Matrix B" << endl;
	for (int i = 0; i < 3; i++)
	{
		for (int j = 0; j < 3; j++)
			cout << C[i][j] << " ";
		cout << endl;
	}

	cout << "Transpose of matrix C" << endl;
	for (int i = 0; i < 3; i++)
	{
		for (int j = 0; j < 3; j++)
			cout << C[j][i] << " ";
		cout << endl;
	}
}
